# Border
#default_border pixel 1
#default_floating_border pixel 1
#smart_borders on

# gaps inner 12
# gaps outer 120

# Font
font pango:SauceCodePro Nerd Font 12

# Mod1 for Alt.
# Mod4 for Home.
