# Run Services
exec udiskie --no-automount --tray
# exec waybar

set $bg       #1f1f1f   
set $active   #333333   
set $inactive #333333   
set $text_color   #ffffff   

# class                 border     background  text         indicator  child_border
client.focused          $active    $bg         $text_color  $active    $active
client.focused_inactive $inactive  $bg         $text_color  $inactive  $inactive
client.unfocused        $bg        #0d1117     #888888      $bg        $inactive
client.urgent           #e06c75    #e06c75     $text_color  #e06c75    #e06c75
client.placeholder      #000000    #0c0c0c     $text_color  #000000    #0c0c0c


# Border
default_border pixel 1
default_floating_border pixel 1
# smart_borders on

gaps inner 24
gaps outer 24

# Font
font pango:JetBrainsMono Nerd Font 8

# Mod1 for Alt.
# Mod4 for Home.
set $mod Mod4

# Home row direction keys, like vim
set $left h
set $down j
set $up k
set $right l

# Apps
# set $term kitty
set $term foot
set $menu wmenu-run
set $browser firefox
set $filemanager nautilus
set $displayManager wdisplays
set $discord discord

# Wallpaper
output * bg ~/dotfiles/wallpapers/aimyon-3.png fill

include /etc/sway/config.d/*
include ~/.config/sway/config.d/*
include ~/.config/sway/swayfx

set $opacity 1
for_window [class="kitty"] opacity $opacity
for_window [app_id="kitty"] opacity $opacity
