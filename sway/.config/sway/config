# Run Services
exec udiskie --no-automount --tray
# exec waybar

# Border
default_border pixel 0

# Font
font pango:JetBrainsMono Nerd Font 8

# Mod1 for Alt.
# Mod4 for Home.
set $mod Mod4

# Home row direction keys, like vim
set $left h
set $down j
set $up k
set $right l

# Apps
set $term kitty
set $menu wmenu-run
set $browser firefox
set $filemanager nautilus

# Wallpaper
output * bg /home/adi/dotfiles/wallpapers/yagakimi-flip.png fill

include /etc/sway/config.d/*
include ~/.config/sway/config.d/*
