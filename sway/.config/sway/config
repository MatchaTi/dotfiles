# Run Services
exec udiskie --no-automount --tray
# exec waybar

# Border
default_border pixel 4
smart_borders on

# Font
font pango:JetBrainsMono Nerd Font 8

# Mod1 for Alt.
# Mod4 for Home.
set $mod Mod4

# Home row direction keys, like vim
set $left h
set $down j
set $up k
set $right l

# Apps
# set $term kitty
set $term foot
set $menu wmenu-run
set $browser firefox
set $filemanager nautilus
set $displayManager wdisplays

# Wallpaper
output * bg ~/dotfiles/wallpapers/mygo-2.png fill

include /etc/sway/config.d/*
include ~/.config/sway/config.d/*

set $opacity 1
for_window [class="kitty"] opacity $opacity
for_window [app_id="kitty"] opacity $opacity
